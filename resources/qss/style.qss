QTableView {
  font-size: 9pt;
  alternate-background-color: #f5f5f5; // Lighter alternate row color
  selection-background-color: #3a7eba; // Default selection color
}
QTableView::item:selected {
  background-color: #3a7eba;
  color: white;
}
QTableView::item:selected:!focus {
  background-color: #a0c4e8;
  color: black;
}
QTableView::item:hover:!selected {
  background-color: #e0e8f0;
}
